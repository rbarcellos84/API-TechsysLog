{
  "Mongo": {
    // Banco de dados específico para ambiente de desenvolvimento
    "ConnectionString": "mongodb://localhost:27017",
    "Database": "techsyslog_dev"
  },
  "JwtSettings": {
    // Identificador da aplicação emissora do token em ambiente de desenvolvimento
    "Issuer": "TechsysLog.Dev",
    // Público alvo do token
    "Audience": "TechsysLog.Client.Dev",
    // Segredo usado para assinar o token JWT (use um valor diferente do de produção)
    "Secret": "segredo-dev-apenas-para-ambiente-local",
    // Tempo de expiração maior para facilitar testes
    "ExpirationHours": 12
  },
  "Logging": {
    "LogLevel": {
      // Logs mais detalhados em desenvolvimento
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  // Hosts permitidos (mantemos aberto em dev)
  "AllowedHosts": "*"
}
